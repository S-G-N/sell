border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    content: ''
    left: 0
    bottom: 0
    width: 100%
    border-bottom: 1px solid $color

bg-image($str)
  background-image url($str+'@2X.png')
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image url($str+'@3X.png')
